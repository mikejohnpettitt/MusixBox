<body class="bg-cream-theme">
  <!-- En-tête du titre -->
  <div class="text-center py-4 py-md-5 mb-4 mb-md-5">
    <h1 style="color: black" class="display-5 display-md-4 fw-bold">Select the playlist</h1>
  </div>

  <div class="container-fluid px-3 px-md-0">
    <!-- Nombre de chansons -->
    <div class="text-center mb-4 mb-md-5">
      <h2 class="fs-5 fs-md-4">Number of songs:</h2>
      <div class="fs-4 fs-md-3 fw-bold" data-controller="counter">
        <button data-action="click->counter#decrement" class="btn btn-light btn-sm">−</button>
        <span data-counter-target="value" class="text-warning mx-2 mx-md-3">5</span>
        <button data-action="click->counter#increment" class="btn btn-light btn-sm">+</button>
      </div>
    </div>

    <!-- Grille des playlists -->
   <%= form_with url: "#", method: :post, local: true do |f| %>

  <div class="py-2 px-2">
    <div class="row g-2">

      <% @playlists.each do |playlist| %>
        <div class="col-4">

          <%= f.radio_button :playlist_id, playlist.id,
                id: "playlist_#{playlist.id}",
                class: "btn-check",
                autocomplete: "off" %>

          <label for="playlist_<%= playlist.id %>"
                 class="btn btn-warning w-100 py-4 fw-bold fs-6">
            <%= playlist.title %>
          </label>

        </div>
      <% end %>

    </div>
  </div>

  <!-- Bouton Start -->
  <div class="row g-2 g-md-2 mb-5 mt-2">
    <div class="col-12">
      <button style="background-color: #FFD700;" type="submit"
              class="btn btn-success w-100 py-3 py-md-5 fw-bold fs-6 fs-md-5">
        Start
      </button>
    </div>
  </div>

<% end %>
  </div>
</body>
